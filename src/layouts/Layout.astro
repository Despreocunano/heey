---
import Header from '../components/header/Header.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

interface Props {
  title?: string;
  description?: string;
  breadcrumb?: {
    label: string;
    href: string;
    current?: boolean;
  }[];
}

const { 
  title = "Decisiones Financieras con Confianza!",
  description = "Encuentra y compara los mejores productos financieros. Análisis experto, beneficios, requisitos y más.",
  breadcrumb 
} = Astro.props;

const showBreadcrumb = breadcrumb && Astro.url.pathname !== '/';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Heey!</title>
  </head>
  <body>
    <Header />
    {showBreadcrumb && <Breadcrumb items={breadcrumb} />}
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>