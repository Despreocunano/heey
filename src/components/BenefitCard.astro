---
import type { Benefit } from '../lib/contentful/types';

interface Props {
  benefit: Benefit;
}

const { benefit } = Astro.props;
const { nombreBeneficio, imagenBeneficio, detalleBeneficio } = benefit.fields;

// Add fallback for image URL
const imageUrl = imagenBeneficio?.fields?.file?.url 
  ? `https:${imagenBeneficio.fields.file.url}`
  : '/placeholder-image.svg';

// Use image description as alt text, fallback to benefit name if no description
const imageAlt = imagenBeneficio?.fields?.description || nombreBeneficio;
---

<div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
  <div class="flex items-start space-x-4">
    <div class="flex-shrink-0">
      <img
        src={imageUrl}
        alt={imageAlt}
        class="w-14 h-14 object-contain rounded-lg"
        loading="lazy"
      />
    </div>
    <div>
      <h3 class="text-lg font-semibold text-gray-900 mb-1">
        {nombreBeneficio}
      </h3>
      <p class="text-gray-600 text-sm whitespace-pre-line">
        {detalleBeneficio}
      </p>
    </div>
  </div>
</div>