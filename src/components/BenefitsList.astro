---
import type { Entry } from 'contentful';
import type { Benefit } from '../lib/contentful/types';

interface Props {
  benefits: Entry<Benefit>[];
}

const { benefits } = Astro.props;
---

<div class="space-y-4">
  {
    benefits.map((benefit) => (
      <div class="bg-gray-50 p-4 rounded-lg">
        <h3 class="font-medium text-gray-900 mb-1">{benefit.fields.nombre}</h3>
        <p class="text-gray-600 text-sm">{benefit.fields.descripcion}</p>
      </div>
    ))
  }
</div>