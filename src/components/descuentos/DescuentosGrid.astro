---
import type { Descuento } from '../../types/contentful/descuento';
import DescuentoCard from './DescuentoCard.astro';

interface Props {
  descuentos: Descuento[];
  emptyMessage?: string;
}

const { 
  descuentos,
  emptyMessage = "No hay descuentos disponibles en este momento."
} = Astro.props;
---

{descuentos.length > 0 ? (
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {descuentos.map(descuento => (
      <DescuentoCard descuento={descuento} />
    ))}
  </div>
) : (
  <div class="text-center py-12">
    <div class="bg-white rounded-lg shadow-sm p-8 max-w-2xl mx-auto">
      <div class="text-gray-400 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <p class="text-gray-600">
        {emptyMessage}
      </p>
    </div>
  </div>
)}