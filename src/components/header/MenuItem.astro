---
interface Props {
  href: string;
  current?: boolean;
}

const { href, current = false } = Astro.props;
---

<li>
  <a
    href={href}
    class:list={[
      "px-3 py-2 text-sm font-medium rounded-md",
      current 
        ? "bg-gray-100 text-red-600"
        : "text-white hover:bg-gray-50 hover:text-red-600"
    ]}
    aria-current={current ? "page" : undefined}
  >
    <slot />
  </a>
</li>