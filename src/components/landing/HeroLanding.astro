---
import type { Hero } from '../../types/contentful/hero';

interface Props {
  hero: Hero;
}

const { hero } = Astro.props;
---

<section class="relative">
  {/* Desktop Image */}
  <img
    src={hero.imagenDesktop.url}
    alt={hero.imagenDesktop.title}
    class="hidden md:block w-full h-[500px] object-cover"
  />
  
  {/* Mobile Image */}
  <img
    src={hero.imagenMobile.url}
    alt={hero.imagenMobile.title}
    class="md:hidden w-full h-[400px] object-cover"
  />
  
  {/* Content Overlay */}
  <div class="absolute inset-0 bg-black/50 flex items-center">
    <div class="max-w-7xl mx-auto px-4 text-white text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        {hero.titulo}
      </h1>
      <p class="text-xl md:text-2xl max-w-3xl mx-auto">
        {hero.descripcion}
      </p>
    </div>
  </div>
</section>