---
import { documentToHtmlString } from '@contentful/rich-text-html-renderer';

interface Props {
  titulo: string;
  contenido: EntryFields.RichText;
}

const { titulo, contenido } = Astro.props;
const contenidoHtml = documentToHtmlString(contenido);
---

<div class="max-w-4xl mx-auto px-4 py-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">{titulo}</h2>
  <div 
    class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-p:text-gray-600 prose-a:text-teal-500 hover:prose-a:text-teal-700 prose-img:rounded-xl prose-strong:text-gray-900"
    set:html={contenidoHtml}
  />
</div>