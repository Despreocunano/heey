---
import type { Bank } from '../lib/contentful/types';

interface Props {
  bank: Bank;
  className?: string;
}

const { bank, className = '' } = Astro.props;
const { nombreBanco, logoBanco } = bank.fields;

const logoUrl = logoBanco?.fields?.file?.url 
  ? `https:${logoBanco.fields.file.url}`
  : '/placeholder-bank.svg';

const logoAlt = logoBanco?.fields?.description || `Logo de ${nombreBanco}`;
---

<div class={`flex items-center space-x-3 ${className}`}>
  <img
    src={logoUrl}
    alt={logoAlt}
    class="h-6 w-auto object-contain"
    loading="lazy"
  />
</div>