---
import type { TarjetaCredito } from '../../../types/contentful';

interface Props {
  tarjeta: TarjetaCredito;
}

const { tarjeta } = Astro.props;
---

<header class="bg-white border-b border-gray-200 mb-6">
  <div class="max-w-6xl mx-auto px-4 py-4">
    <div class="flex lg:flex-row lg:items-center justify-between gap-4">
      <div class="flex flex-col lg:items-center gap-4">
        <h1 class="text-lg sm:text-2xl font-bold text-lime-700">{tarjeta.nombre}</h1>
      </div>
      <div class="hidden sm:inline-block gap-2">
        <img 
          src={tarjeta.entidadBancaria.logoBanco.url} 
          alt={tarjeta.entidadBancaria.logoBanco.title}
          class="h-8 object-contain"
        />
      </div>
    </div>
  </div>
</header>