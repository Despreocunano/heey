---
interface Props {
  pros?: string[];
  contras?: string[];
}

const { pros = [], contras = [] } = Astro.props;

// Determinar si debemos usar ancho completo para los pros
const useSingleColumn = contras.length === 0;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  {pros.length > 0 && (
    <div class:list={[
      "bg-green-50 rounded-lg p-6",
      { "md:col-span-2": useSingleColumn }
    ]}>
      <h3 class="text-lg font-semibold text-green-700 mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        Pros
      </h3>
      <ul class="space-y-2">
        {pros.map((pro) => (
          <li class="flex items-start gap-2 text-green-800">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            {pro}
          </li>
        ))}
      </ul>
    </div>
  )}

  {contras.length > 0 && (
    <div class="bg-red-50 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-red-700 mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        Contras
      </h3>
      <ul class="space-y-2">
        {contras.map((contra) => (
          <li class="flex items-start gap-2 text-red-800">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
            {contra}
          </li>
        ))}
      </ul>
    </div>
  )}
</div>