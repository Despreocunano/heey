---
import type { TarjetaCredito } from '../../types/contentful';

interface Props {
  tarjeta: TarjetaCredito;
}

const { tarjeta } = Astro.props;
---

<a 
  href={`/tarjetas-de-credito/${tarjeta.slug}`}
  class="group block bg-white rounded-xl shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100 hover:border-gray-200 overflow-hidden"
>
  <div class="relative">
    <div class="bg-gradient-to-br from-gray-50 to-gray-100 p-8">
      <img 
        src={tarjeta.imagenTarjeta.url} 
        alt={tarjeta.imagenTarjeta.title}
        class="w-full h-40 object-contain transform group-hover:scale-105 transition-transform duration-300"
      />
    </div>
    
    <div class="p-6">
      <div class="flex flex-col items-start mb-4">
        <img 
          src={tarjeta.entidadBancaria.logoBanco.url} 
          alt={tarjeta.entidadBancaria.logoBanco.title}
          class="h-4 w-auto object-contain mb-2"
        />
        <h2 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors leading-tight">
          {tarjeta.nombre}
        </h2>
      </div>

      <div class="space-y-3">
        <div class="flex items-center gap-2 text-gray-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 12V8H6a2 2 0 0 1-2-2c0-1.1.9-2 2-2h12v4" />
            <path d="M4 6v12c0 1.1.9 2 2 2h14v-4" />
            <path d="M18 12H4" />
          </svg>
          <span>Mantención: {tarjeta.mantencion}</span>
        </div>
        
        <div class="flex items-center gap-2 text-gray-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" />
          </svg>
          <span>Renta mínima: ${tarjeta.renta.toLocaleString('es-CL')}</span>
        </div>
      </div>

      <div class="flex flex-wrap gap-2 mt-4">
        {tarjeta.categoria.map((cat) => (
          <span class="px-3 py-1 bg-blue-50 text-blue-600 rounded-full text-sm font-medium">
            {cat}
          </span>
        ))}
      </div>

      <div class="flex gap-2 mt-4">
        {tarjeta.marca.map((marca) => (
          <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm font-medium">
            {marca}
          </span>
        ))}
      </div>
    </div>
  </div>
</a>