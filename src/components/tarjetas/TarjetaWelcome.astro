---
import Card from './Card.astro';

// Lista de tarjetas con sus datos
const cards = [
  {
    image: 'https://via.placeholder.com/40', // Reemplaza con la URL de tu imagen
    title: 'Best Cards',
  },
  {
    image: 'https://via.placeholder.com/40', // Reemplaza con la URL de tu imagen
    title: 'CardMatch™',
  },
  {
    image: 'https://via.placeholder.com/40', // Reemplaza con la URL de tu imagen
    title: 'Balance Transfer',
  },
  {
    image: 'https://via.placeholder.com/40', // Reemplaza con la URL de tu imagen
    title: '0% APR',
  },
];
---

<section class="bg-lime-600 text-white py-8">
  <div class="container mx-auto px-4 text-center">
    <!-- Mensaje superior -->
    <div class="bg-lime-800 text-sm py-2 px-4 rounded-full inline-block mb-6">
      Looking for a credit card? See our 2025 Bankrate Awards winners.
    </div>

    <!-- Título y subtítulo -->
    <h1 class="text-3xl md:text-4xl font-bold mb-4">Credit Cards</h1>
    <p class="text-base md:text-lg font-light mb-8">
      Compare top offers by category. Read our expert reviews and recommendations. Feel confident when you apply.
    </p>

    <!-- Contenedor para las cards -->
    <div
      class="flex gap-4 overflow-x-auto px-6 py-4 scrollbar-hide md:overflow-x-hidden md:justify-center md:flex-wrap"
    >
      {cards.map((card) => (
        <Card image={card.image} title={card.title} />
      ))}
    </div>
  </div>
</section>