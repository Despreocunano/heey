---
interface Props {
  brand: string;
  className?: string;
}

const { brand, className = "h-2" } = Astro.props;

const logoPath = brand.toLowerCase() === 'visa' 
  ? '/images/visa-logo.svg'
  : brand.toLowerCase() === 'mastercard'
  ? '/images/mastercard-logo.svg'
  : '/images/amex-logo.svg';
---

<img 
  src={logoPath} 
  alt={`Logo ${brand}`}
  class={className}
/>