---
// Props que recibe el componente
interface Props {
  image: string; // URL de la imagen
  title: string; // Título de la tarjeta
}

const { image, title } = Astro.props;
---

<div class="min-w-[250px] md:w-[220px] bg-white text-black py-6 px-4 rounded-lg shadow-md flex flex-col items-center hover:shadow-lg transition-shadow">
  <!-- Imagen -->
  <img src={image} alt={title} class="w-10 h-10 mb-3" />
  <!-- Título -->
  <h3 class="font-semibold text-lg">{title}</h3>
</div>