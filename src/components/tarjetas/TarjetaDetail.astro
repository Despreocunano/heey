---
import type { TarjetaCredito } from '../../types/contentful';
import Header from './detail/Header.astro';
import Sidebar from './detail/Sidebar.astro';
import MainContent from './detail/MainContent.astro';

interface Props {
  tarjeta: TarjetaCredito;
}

const { tarjeta } = Astro.props;
---

<div class="min-h-screen bg-gray-50">
  <Header tarjeta={tarjeta} />
  
  <div class="max-w-6xl mx-auto px-4 py-6">
    <!-- Sidebar en mÃ³vil -->
    <div class="lg:hidden mb-6">
      <Sidebar tarjeta={tarjeta} mobile={true} />
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <MainContent tarjeta={tarjeta} />
      </div>
      
      <!-- Sidebar en desktop -->
      <div class="hidden lg:block lg:col-span-1">
        <Sidebar tarjeta={tarjeta} mobile={false} />
      </div>
    </div>
  </div>
</div>