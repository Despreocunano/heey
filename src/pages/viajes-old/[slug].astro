---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import ArticleSidebar from '../../components/article/ArticleSidebar.astro';
import { getNoticiaBySlug } from '../../lib/contentful/queries/noticias';
import { documentToHtmlString } from '@contentful/rich-text-html-renderer';

const { slug } = Astro.params;
if (!slug) {
  return Astro.redirect('/404');
}

const noticia = await getNoticiaBySlug(slug);
if (!noticia) {
  return Astro.redirect('/404');
}

const contenidoHtml = documentToHtmlString(noticia.contenido);

const fecha = new Date().toLocaleDateString('es-CL', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const breadcrumb = [
  { label: 'Inicio', href: '/' },
  { label: 'Viajes', href: '/viajes' },
  { label: noticia.titulo, href: `/viajes/${noticia.slug}`, current: true }
];
---

<Layout 
  title={noticia.titulo}
  description={`Lee sobre ${noticia.titulo} y más artículos de viajes`}
  breadcrumb={breadcrumb}
>
  <main class="bg-gray-50">
    {/* Hero Section */}
    <div class="bg-white border-b">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex flex-col gap-4">
          {/* Categories */}
          <div class="flex gap-2">
            {noticia.categoria?.map((cat) => (
              <a
                href={`/noticias/categoria/${cat.slug}`}
                class="text-sm font-medium text-teal-600 hover:text-teal-700 bg-teal-50 px-3 py-1 rounded-full"
              >
                {cat.nombreCategoria}
              </a>
            ))}
          </div>

          {/* Title */}
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 leading-tight">
            {noticia.titulo}
          </h1>

          {/* Meta info */}
          <div class="flex items-center gap-4 text-sm text-gray-600">
            <time datetime={fecha} class="flex items-center gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {fecha}
            </time>
            <span class="flex items-center gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              5 min de lectura
            </span>
          </div>
        </div>
      </div>
    </div>

    {/* Content Grid */}
    <div class="max-w-6xl mx-auto px-4 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {/* Main Content */}
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl shadow-sm overflow-hidden">
            {/* Featured Image */}
            <img 
              src={noticia.imagen.url} 
              alt={noticia.imagen.title}
              class="w-full h-[400px] object-cover"
            />
            
            {/* Article Content */}
            <div class="p-8">
              <div 
                class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-p:text-gray-600 prose-a:text-teal-600 hover:prose-a:text-teal-700 prose-img:rounded-xl prose-strong:text-gray-900"
                set:html={contenidoHtml}
              />
            </div>
          </div>

          {/* Share Buttons */}
          <div class="mt-8 flex justify-center gap-4">
            <button class="flex items-center gap-2 px-4 py-2 bg-[#1da1f2] text-white rounded-lg hover:bg-[#1a91da] transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
              Compartir en Twitter
            </button>
            <button class="flex items-center gap-2 px-4 py-2 bg-[#1877f2] text-white rounded-lg hover:bg-[#166fe5] transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
              Compartir en Facebook
            </button>
          </div>
        </div>

        {/* Sidebar */}
        <ArticleSidebar currentSlug={slug} />
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Estilos adicionales para el contenido del artículo */
  :global(.prose img) {
    @apply my-8;
  }
  :global(.prose h2) {
    @apply mt-12 mb-6;
  }
  :global(.prose p) {
    @apply leading-relaxed;
  }
</style>