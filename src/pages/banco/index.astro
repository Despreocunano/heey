---
import Layout from '../../layouts/Layout.astro';
import { getBancos } from '../../lib/contentful';

const bancos = await getBancos();

const breadcrumb = [
  { label: 'Inicio', href: '/' },
  { label: 'Bancos', href: '/banco', current: true }
];
---

<Layout title="Bancos en Chile"
description="Conoce todos los bancos, fintech y servicios financieros que hay en Chile."
breadcrumb={breadcrumb}>
  <main class="bg-gray-50">
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Bancos en Chile
        </h1>
        <p class="text-xl text-gray-600">
          Descubre las mejores tarjetas de cr√©dito de los principales bancos con presencia en Chile
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {bancos.map((banco) => (
          <a 
            href={`/banco/${banco.slug}`}
            class="group bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 p-8 border border-gray-100 hover:teal-red-200 relative overflow-hidden"
          >
            <div class="absolute inset-0 bg-gradient-to-br from-red-50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"/>
            <div class="relative">
              <div class="flex flex-col items-center gap-6 text-center">
                <div class="bg-white p-4 rounded-lg shadow-sm">
                  <img 
                    src={banco.logoBanco.url} 
                    alt={banco.logoBanco.title}
                    class="h-8 w-auto object-contain"
                  />
                </div>
                <div>
                  <h2 class="text-2xl font-semibold text-gray-900 group-hover:text-teal-700 transition-colors mb-2">
                    {banco.nombreBanco}
                  </h2>
                  <p class="text-gray-600">Ver tarjetas disponibles</p>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </main>
</Layout>