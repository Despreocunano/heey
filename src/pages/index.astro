---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import { getCreditCards } from '../lib/contentful/queries/creditCard';
import CreditCardList from '../components/CreditCardList.astro';

// Get all credit cards
const cards = await getCreditCards();
---

<Layout>
  <main class="container mx-auto px-4 py-8">
    <Welcome />
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Tarjetas Disponibles</h2>
      <CreditCardList cards={cards} />
    </div>
  </main>
</Layout>