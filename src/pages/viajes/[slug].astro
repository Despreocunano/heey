---
import Layout from '../../layouts/Layout.astro';
import { getNoticiaBySlug, getNoticias } from '../../lib/contentful/queries/noticias';
import { documentToHtmlString } from '@contentful/rich-text-html-renderer';

export async function getStaticPaths() {
  const noticias = await getNoticias();
  
  return noticias.map(noticia => ({
    params: { slug: noticia.slug },
    props: { noticia }
  }));
}

const { noticia } = Astro.props;

if (!noticia) {
  return Astro.redirect('/404');
}

const breadcrumb = [
  { label: 'Inicio', href: '/' },
  { label: 'Viajes', href: '/viajes' },
  { label: noticia.titulo, href: `/viajes/${noticia.slug}`, current: true }
];

const contenidoHtml = documentToHtmlString(noticia.contenido);
---

<Layout title={noticia.titulo} breadcrumb={breadcrumb}>
  <main class="max-w-4xl mx-auto px-4 py-12">
    <article>
      <img
        src={noticia.imagen.url}
        alt={noticia.imagen.title}
        class="w-full h-[628px] object-cover rounded-lg shadow-lg mb-8"
      />
      
      <h1 class="text-4xl font-bold text-gray-900 mb-6">
        {noticia.titulo}
      </h1>

      {noticia.categoria && noticia.categoria.length > 0 && (
        <div class="flex gap-2 mb-8">
          {noticia.categoria.map((cat) => (
            <a
              href={`/${cat.slug}`}
              class="inline-block bg-teal-100 text-teal-800 px-3 py-1 rounded-full text-sm font-medium hover:bg-teal-200 transition-colors"
            >
              {cat.nombreCategoria}
            </a>
          ))}
        </div>
      )}

      <div 
        class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-p:text-gray-700"
        set:html={contenidoHtml}
      />
    </article>
  </main>
</Layout>